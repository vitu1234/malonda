<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke2"
    android:orientation="vertical"
    tools:context=".buyer.activities.ProductDetailsActivity">


    <RelativeLayout
        android:id="@+id/const2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:onClick="goback"
            android:padding="8dp"
            android:src="@drawable/arrow_back_icon"
            android:visibility="visible"
            app:tint="@color/purple_700" />

        <TextView
            android:textAllCaps="true"
            android:id="@+id/prodDetails_prodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_vertical"
            android:text="@string/product_details"
            android:textColor="@color/purple_700"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/prodDetails_Directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="viewDirections"
            android:padding="8dp"
           android:clickable="true"
            android:background="@drawable/ripple_effect"
            app:srcCompat="@drawable/directions_icon"
            app:tint="@color/purple_700" />

        <TextView
            android:onClick="viewDirections"
            android:clickable="true"
            android:background="@drawable/ripple_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/prodDetails_Directions"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="@string/map_txt"
            android:textSize="12sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/big_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/b1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/card21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_grey_bordersolid"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/prodDetails_prodCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:elevation="8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="8dp"
                        android:text="@string/sample_category_name_txt"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700" />


                    <TextView
                        android:id="@+id/prodDetails_prodPriceUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodDetails_prodCategory"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_bold"
                        android:text="MWK 10,000 - KG"
                        android:textColor="@color/purple_700" />

                    <TextView
                        android:id="@+id/prodDetails_prodStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodDetails_prodCategory"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins_bold"
                        android:text="In Stock: 10"
                        android:textColor="@color/purple_700" />

                    <TextView
                        android:id="@+id/prodDetails_prodDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodDetails_prodStock"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:elevation="8dp"
                        android:fontFamily="@font/poppins"
                        android:justificationMode="inter_word"
                        android:padding="10dp"
                        android:text="@string/sample_desc"
                        android:textAlignment="center" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/busDetailsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="8dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/prodDetails_Bus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:elevation="8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="8dp"
                        android:text="Business Info"
                        android:textAlignment="center"
                        android:textColor="@color/purple_700" />


                    <TextView
                        android:id="@+id/prodDetails_prodBusName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodDetails_Bus"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Vitu Shop"
                        android:textColor="@color/purple_700" />

                    <TextView
                        android:id="@+id/prodDetails_prodBusPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodDetails_Bus"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins_bold"
                        android:text="+265882992942"
                        android:textColor="@color/purple_700" />

                    <TextView
                        android:id="@+id/prodDetails_prodAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prodDetails_prodBusPhone"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:elevation="8dp"
                        android:fontFamily="@font/poppins"
                        android:justificationMode="inter_word"
                        android:padding="10dp"
                        android:text="@string/sample_desc"
                        android:textAlignment="center" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>