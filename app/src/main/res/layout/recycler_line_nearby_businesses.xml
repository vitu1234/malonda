<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frameSale2"
    android:layout_marginBottom="1dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/ripple_effect"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


        <!-- FrontView Must be at the lower level to be drawn Over the rear views -->
        <RelativeLayout
            android:padding="16dp"
            android:id="@+id/front_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/purple_700"
                android:id="@+id/busName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Tomato Wholesale"
                />


            <TextView

                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/busPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="+265996670686"
                />

            <LinearLayout
                android:id="@+id/lins"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/busName">
                <TextView
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:id="@+id/busAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Mitundu PO Box 28, Bunda, Lilongwe"
                    />
                <TextView
                    android:textColor="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/busDistance"
                    android:text="10KM away"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/directions_icon"
                    app:tint="@color/purple_500" />

            </LinearLayout>
            <TextView
                android:layout_below="@+id/lins"
                android:textColor="@color/purple_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/busProducts"
                android:text="10KM away"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                />
        </RelativeLayout>

</FrameLayout>